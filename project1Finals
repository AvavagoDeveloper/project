    float sandalsCount = 0, leatherBootsCount = 0, ruggedBootsCount = 0, waterproofBootsCount = 0, slipOnsCount = 0, platformsCount = 0, heelsCount = 0, balletFlatsCount = 0;
    float socksCount = 0, insolesCount = 0, cleanerCount = 0, polishCount = 0, shoelacesCount = 0, brushCount = 0, padsCount = 0, hornCount = 0;
    float order = 0, totalBefore = 0, total = 0, vatTotal = 0, seniorTotal = 0, cashAmount, change = 0, totalWithVat = 0;
    const float vat = 0.12, discount = 0.20;
    char senior, pwd;

    cout << "+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++" << endl
        << "|||||||||||||||||||||||||||||||||||SHOEMAR FOOTWEAR CO.||||||||||||||||||||||||||||||||||" << endl
        << "+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++" << endl << endl;

    cout << "                                 Hello! Welcome to Shoemar!" << endl;
    cout << "                          ========================================" << endl;
    cout << "                                         CATEGORIES               " << endl;
    cout << "                          ========================================" << endl;
    cout << "                               1 - Footwear | 2 - Accessories" << endl << endl;

    while (true) {
        cout << "How many items would you like to order? ";
        cin >> numOrders;
        if (cin.fail()) {
            cin.clear();
            cin.ignore(1000, '\n');
            cout << "Invalid Amount!" << endl;
        }
        else {
            break;
        }
    }

    for (int i = 1; i <= numOrders; i++) {

        cout << endl << "                 ---- ORDER #" << i << " ----" << endl;

        // reset order price for each item
        order = 0;

        cout << "Enter option number (1 - Footwear, 2 - Accessories): ";
        cin >> choice1;
        cout << endl;

        if (choice1 == 1) {
            cout << " 1 - Casual Sneakers--------PHP 1499.99 |  2 - Running Shoes-----PH P2799.99" << endl;
            cout << " 3 - Loafers----------------PHP 1799.99 |  4 - Dress Shoes-------PHP 1899.99" << endl;
            cout << " 5 - Sandals-----------------PHP 899.99 |  6 - Leather Boots-----PHP 2999.99" << endl;
            cout << " 7 - Rugged Boots-----------PHP 2399.99 |  8 - Waterproof Boots--PHP 1299.99" << endl;
            cout << " 9 - Slip-ons----------------PHP 899.99 | 10 - Platforms---------PHP 1199.99" << endl;
            cout << "11 - Heels------------------PHP 1399.99 | 12 - Ballet Flats-------PHP 999.99" << endl << endl;

            while (true) {
                cout << "Enter option number: ";
                cin >> choice2;

                if (choice2 == 1) {
                    order = 1499.99;
                }
                else if (choice2 == 2) {
                    order = 2799.99;
                }
                else if (choice2 == 3) {
                    order = 1799.99;
                }
                else if (choice2 == 4) {
                    order = 1899.99;
                }
                else if (choice2 == 5) {
                    order = 899.99;
                }
                else if (choice2 == 6) {
                    order = 2999.99;
                }
                else if (choice2 == 7) {
                    order = 2399.99;
                }
                else if (choice2 == 8) {
                    order = 1299.99;
                }
                else if (choice2 == 9) {
                    order = 899.99;
                }
                else if (choice2 == 10) {
                    order = 1199.99;
                }
                else if (choice2 == 11) {
                    order = 1399.99;
                }
                else if (choice2 == 12) {
                    order = 999.99;
                }
                else {
                    cout << "Invalid Option!" << endl;
                    continue;
                }
                break;
            }
        }
        else if (choice1 == 2) {
            cout << " 1 - Socks-------------------PHP 199.99 |  2 - Insoles------------PHP 250.00" << endl;
            cout << " 3 - Shoe Cleaner------------PHP 230.00 |  4 - Shoe Polish--------PHP 140.00" << endl;
            cout << " 5 - Shoelaces---------------PHP 100.00 |  6 - Shoe Brush---------PHP 140.00" << endl;
            cout << " 7 - Shoe Pads----------------PHP 90.00 |  8 - Shoe Horn-----------PHP 70.00" << endl << endl;

            while (true) {
                cout << "Enter option number: ";
                cin >> choice3;

                if (choice3 == 1) {
                    order = 199.99;
                }
                else if (choice3 == 2) {
                    order = 250.00;
                }
                else if (choice3 == 3) {
                    order = 230.00;
                }
                else if (choice3 == 4) {
                    order = 140.00;
                }
                else if (choice3 == 5) {
                    order = 100.00;
                }
                else if (choice3 == 6) {
                    order = 140.00;
                }
                else if (choice3 == 7) {
                    order = 90.00;
                }
                else if (choice3 == 8) {
                    order = 70.00;
                }
                else {
                    cout << "Invalid Option!" << endl;
                    continue;
                }
                break;
            }
        }
        else {
            cout << "Invalid category! Try again." << endl;
            i--;
            continue;
        }

        cout << "Enter purchase quantity: ";
        cin >> quanti;

        totalBefore += order * quanti;
        if (choice1 == 1) { // Footwear
            if (choice2 == 1) {
                casualSneakersCount = quanti;
            }
            else if (choice2 == 2) {
                runningShoesCount = quanti;
            }
            else if (choice2 == 3) {
                loafersCount = quanti;
            }
            else if (choice2 == 4) {
                dressShoesCount = quanti;
            }
            else if (choice2 == 5) {
                sandalsCount = quanti;
            }
            else if (choice2 == 6) {
                leatherBootsCount = quanti;
            }
            else if (choice2 == 7) {
                ruggedBootsCount = quanti;
            }
            else if (choice2 == 8) {
                waterproofBootsCount = quanti;
            }
            else if (choice2 == 9) {
                slipOnsCount = quanti;
            }
            else if (choice2 == 10) {
                platformsCount = quanti;
            }
            else if (choice2 == 11) {
                heelsCount = quanti;
            }
            else if (choice2 == 12) {
                balletFlatsCount = quanti;
            }
        }
        else if (choice1 == 2) { // Accessories
            if (choice3 == 1) {
                socksCount = quanti;
            }
            else if (choice3 == 2) {
                insolesCount = quanti;
            }
            else if (choice3 == 3) {
                cleanerCount = quanti;
            }
            else if (choice3 == 4) {
                polishCount = quanti;
            }
            else if (choice3 == 5) {
                shoelacesCount = quanti;
            }
            else if (choice3 == 6) {
                brushCount = quanti;
            }
            else if (choice3 == 7) {
                padsCount = quanti;
            }
            else if (choice3 == 8) {
                hornCount = quanti;
            }
        }
    }

